<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pa1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ahmad ghneem"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Date :16/3/2021"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Time :12:30 am"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/sendmassage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_h"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edit_background"
            android:hint=" Add your comment to patient"
            android:inputType="text"
            android:paddingHorizontal="@dimen/fab_margin"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/Addcomm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:drawableStart="@drawable/icon_comment"
                android:padding="5dp"
                android:text="Add Comment"
                android:textColor="@color/white"
                android:textSize="25px"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/Addpa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:drawableStart="@drawable/add_pa"
                android:padding="5dp"
                android:text="Add pa"
                android:textColor="@color/white"
                android:textSize="25px"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/RemoveBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:drawableStart="@drawable/ic_remove_circle_black_24dp"
                android:padding="5dp"
                android:text="Remove PA"
                android:textColor="@color/white"
                android:textSize="25px"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>

</RelativeLayout>