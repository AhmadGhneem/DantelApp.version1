<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/welcomenote" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/fab_margin"
                android:layout_marginVertical="@dimen/mini_margin"
                android:background="@drawable/ll_back"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/fab_margin">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/fab_margin"
                    android:src="@drawable/logo" />

                <EditText
                    android:textColorHint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_h"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginHorizontal="@dimen/fab_margin"
                    android:layout_marginVertical="@dimen/mini_margin"
                    android:background="@drawable/edit_background"
                    android:hint="@string/username"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="@dimen/fab_margin" />

                <EditText
                    android:textColorHint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_h"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginHorizontal="@dimen/fab_margin"
                    android:layout_marginVertical="@dimen/mini_margin"
                    android:background="@drawable/edit_background"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/fab_margin" />

                <Button
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/fab_margin"
                    android:layout_marginVertical="@dimen/fab_margin"
                    android:background="@drawable/btn_background"
                    android:text="@string/login"
                    android:textSize="@dimen/text_btn" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/fab_margin"
                android:layout_marginVertical="@dimen/mini_margin"
                android:background="@drawable/ll_back"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/fab_margin">

                <Button
                    android:id="@+id/registerBTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/fab_margin"
                    android:layout_marginVertical="@dimen/fab_margin"
                    android:background="@drawable/btn_white_background"
                    android:text="register"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_btn" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>